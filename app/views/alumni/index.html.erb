<p id="notice"><%= notice %></p>

<h1>Alumni</h1>

<table>
  <thead>
    <tr>
      <th>Roll no</th>
      <th>Name</th>
      <th>Grad year</th>
      <th>Personal mail</th>
      <th>College mail</th>
      <th>Phone no</th>
      <th>Company name</th>
      <th>Designation</th>
      <th>Location</th>
      <th>Linkedin</th>
      <th>Facebook</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @alumni.each do |alumnus| %>
      <tr>
        <td><%= alumnus.roll_no %></td>
        <td><%= alumnus.name %></td>
        <td><%= alumnus.grad_year %></td>
        <td><%= alumnus.personal_mail %></td>
        <td><%= alumnus.college_mail %></td>
        <td><%= alumnus.phone_no %></td>
        <td><%= alumnus.company_name %></td>
        <td><%= alumnus.designation %></td>
        <td><%= alumnus.location %></td>
        <td><%= alumnus.linkedIn %></td>
        <td><%= alumnus.facebook %></td>
        <td><%= link_to 'Show', alumnus %></td>
        <td><%= link_to 'Edit', edit_alumnus_path(alumnus) %></td>
        <td><%= link_to 'Destroy', alumnus, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

